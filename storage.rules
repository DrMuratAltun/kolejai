rules_version = '2';

// Warning: These rules are permissive and are intended for development purposes.
// For a production application, you should implement more granular security rules,
// such as allowing writes only for authenticated users (e.g., `allow write: if request.auth != null;`).
service firebase.storage {
  match /b/{bucket}/o {
    match /{allPaths=**} {
      // Allows public read and write access to all files.
      allow read, write: if true;
    }
  }
}
